<!DOCTYPE html>
<html lang="es">
<head>
    <title>Editar presupuesto N° <%= presupuesto.id %></title>
    <%- include('../partials/head') %>
</head>
<body>
    <main class="editar">
        <%- include('../partials/header') %>
        <section class="container">
            <h1>Editar presupuesto N° <%= presupuesto.id %></h1>
            <div class="divContainer">
                <form action="/admin/editar/<%= presupuesto.id %>?_method=PUT" method="POST">
                    <div class="divPClave">
                        <label for="clave"><b>Clave:</b></label>
                        <input type="text" name="clave" id="clave" placeholder="Palabra clave" value="<%= presupuesto.palabraClave == 0 ? "" : presupuesto.palabraClave %>">
                    </div>
                    <div class="divCliente">
                        <h4>Datos del cliente</h4>
                        <label for="nombre">Nombre</label>
                        <input type="text" name="nombre" id="nombre" value="<%= presupuesto.nombreCliente %>">
                        <label for="direccion">Dirección</label>
                        <input type="text" name="direccion" id="direccion" value="<%= presupuesto.direccionCliente %>">
                        <label for="telefono">Teléfono</label>
                        <input type="number" name="telefono" id="telefono" value="<%= presupuesto.telefonoCliente %>">
                    </div>
                    <div class="divPresupuesto">
                        <h4>Datos del presupuesto</h4>
                        <label for="fecha">Fecha del presupuesto</label>
                        <input type="text" name="fechaPresupuesto" disabled id="fecha" value="<%= presupuesto.fechaPresupuesto %>">
                        <div class="actualizarFecha">
                            <input type="checkbox" name="actualizarFecha" id="fechaActual">
                            <label for="fechaActual">Actualizar fecha</label>
                        </div>
                        <label for="garantia">Garantía</label>
                        <input type="number" name="garantia" id="garantia" value="<%= presupuesto.garantia %>">
                    </div>
                    <h4 class="tituloTrabajo">Trabajos</h4>
                    <div class="divTrabajos">
                        <article>
                            <input type="text" name="trabajo0" value="<%= presupuesto.trabajo0 %>">
                            <div>
                                <label for="precio"><b>$:</b></label>
                                <input type="number" name="precio0" class="inputPrecio" value="<%= presupuesto.precio0 %>">
                            </div>
                        </article>
                        <article>
                            <input type="text" name="trabajo1" value="<%= presupuesto.trabajo1 ? presupuesto.trabajo1 : "" %>">
